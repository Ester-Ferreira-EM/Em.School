@using EM.Domain
@using EM.Domain.Enums
@model EM.Domain.Cidade

@{
    bool isEdicao = ViewBag.IsEdicao ?? false;
    string titulo = isEdicao ? "Editar Cidade" : "Cadastrar Cidade";
    ViewData["Title"] = titulo;
}

<div class="container">
    <form class="row" asp-controller="Cidade" asp-action="CadastraCidade" method="post">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="col-6">
            <label asp-for="Nome" class="form-label"> <b> Nome </b> </label>
            <input asp-for="Nome" type="text" class="form-control" name="Nome" placeholder="Nome da cidade" required />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="col-3">
            <label asp-for="Uf" class="form-label"> <b> UF </b> </label>
            <select id="inputUf" class="form-select" name="Uf">
                @foreach (var uf in Enum.GetValues(typeof(UF)))
                {
                    <option value="@uf">@uf</option>
                }
            </select>
        </div>

        <div class="col-12">
            <br />
            <button type="submit" class="btn btn-outline-success">Salvar</button>
            <a class="btn btn-outline-secondary" asp-controller="Cidade" asp-action="TabelaCidades">Voltar</a>
        </div>
    </form>
</div>